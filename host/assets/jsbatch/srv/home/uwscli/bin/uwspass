import sys
sys.path.insert(0, '/srv/home/uwscli/lib')

import uwscli

if __name__ == '__main__':
	sys.stdout.reconfigure(line_buffering = False)
	sys.stderr.reconfigure(line_buffering = False)
	user = uwscli.getuser()
	sys.exit(uwscli.run('uwspass.py', '--user %s' % user.name))
