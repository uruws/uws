#!/bin/sh
set -eu
region=${1:?'east or west?'}
shift
case ${region} in
	east)
	;;
	west)
	;;
	*)
	echo "invalid cluster region: ${region}" >&2
	exit 1
	;;
esac
cd /srv/uws/deploy
exec ./docker/k8s/cli.sh amy-${region} ./pod/meteor/web/logs.sh $@

#uwscli:web-logs - get meteor web logs/output from all running containers

#uwsdoc:web-logs [pod-name] [-f] [--tail=N]
#uwsdoc:
#uwsdoc:	pod-name - if specified, show output from that pod/container only.
#uwsdoc:	-f - follow the output (wait for and show new entries).
#uwsdoc:	--tail=N - get latest N log lines.
