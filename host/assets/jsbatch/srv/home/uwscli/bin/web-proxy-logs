#!/bin/sh
set -eu
region=${1:?'east or west?'}
shift
case ${region} in
	east)
	;;
	west)
	;;
	*)
	echo "invalid cluster region: ${region}" >&2
	exit 1
	;;
esac
cd /srv/uws/deploy
exec ./docker/k8s/cli.sh amy-${region} ./k8s/nginx-ingress/logs.sh $@

#uwscli:web-proxy-logs		- get logs from meteor app web proxy.

#uwsdoc:web-proxy-logs [-f] [--tail=N]
#uwsdoc:
#uwsdoc:  -f       - follow the output (wait for and show new entries).
#uwsdoc:  --tail=N - get latest N log lines.
