#!/usr/bin/env python3

from os import chdir
from subprocess import Popen
from sys import exit, stdout, stderr

try:
	chdir('/srv/uws/deploy')
except Exception as err:
	print(err)
	exit(1)

#~ (./docker/k8s/cli.sh amy-east ./k8s/nginx-ingress/logs.sh $@)
#~ (./docker/k8s/cli.sh amy-west ./k8s/nginx-ingress/logs.sh $@)

cli = './docker/k8s/cli.sh'
logs_cmd = './k8s/nginx-ingress/logs.sh'

amy_east = Popen([cli, 'amy-east', logs_cmd])
amy_west = Popen([cli, 'amy-west', logs_cmd])

amy_west.wait()
amy_east.kill()
