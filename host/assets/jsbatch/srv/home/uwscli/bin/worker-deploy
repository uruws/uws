#!/bin/sh
set -eu

release=${1:-''}

list_images() {
	echo 'Available release:'
	aws ecr list-images --output text --repository-name uws --region us-east-1 |
		grep -F meteor-app | awk '{ print $3 }' | sed 's/^meteor-app-//'
	echo 'Build a release: meteor-build X.Y.Z'
	echo '    Deploy with: worker-deploy X.Y.Z-deadbeef'
}

deploy() {
	uwsnq /srv/uws/deploy/cli/meteor-deploy.sh amy-wrkr worker "${1}"
}

if test "X${release}" = 'X'; then
	list_images
	exit 0
fi

case "${release}" in
	-h|--help)
		exec uwshelp worker-deploy
	;;
	*)
		deploy "${release}"
	;;
esac

exit 0

#uwscli:worker-deploy		- deploy meteor worker release

#uwsdoc:worker-deploy [X.Y.Z-abc123]
#uwsdoc:
#uwsdoc:  Deploy meteor worker build X.Y.Z-abc123.
#uwsdoc:  With no arguments it lists built images available for deploy.
