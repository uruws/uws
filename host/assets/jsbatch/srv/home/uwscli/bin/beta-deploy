#!/bin/sh
set -eu

release=${1:-''}

list_images() {
	echo 'Available release:'
	aws ecr list-images --output text --repository-name uws --region us-east-2 |
		grep -F meteor-beta | awk '{ print $3 }' | sed 's/^meteor-/  /'
	echo 'Build a release: meteor-build --beta X.Y.Z'
	echo 'Deploy with:     beta-deploy X.Y.Z-deadbeef'
}

deploy() {
	uwsnq /srv/uws/deploy/cli/meteor-deploy.sh amybeta beta "${1}"
}

if test "X${release}" = 'X'; then
	list_images
	exit 0
fi

case "${release}" in
	-h|--help)
		exec uwshelp beta-deploy
	;;
	*)
		deploy "${release}"
	;;
esac

exit 0

#uwscli:beta-deploy			- deploy meteor beta release

#uwsdoc:beta-deploy [X.Y.Z-abc123]
#uwsdoc:
#uwsdoc:  Deploy meteor beta build X.Y.Z-abc123.
#uwsdoc:  With no arguments it lists built images available for deploy.
