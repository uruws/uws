#!/bin/sh
set -eu

region=${1:?'east or west?'}
release=${2:-''}

list_images() {
	echo 'Available release:'
	aws ecr list-images --output text --repository-name uws --region us-east-1 |
		grep -F meteor-app | awk '{ print $3 }' | sed 's/^meteor-app-//'
	echo 'Build a release: meteor-build X.Y.Z'
	echo '    Deploy with: web-deploy <region> X.Y.Z-deadbeef'
}

deploy() {
	uwsnq /srv/uws/deploy/cli/meteor-deploy.sh "amy-${1}" web "${2}"
}

if test "X${release}" = 'X'; then
	list_images
	exit 0
fi

if test "${region}" != 'east' && test "${region}" != 'west'; then
	echo "invalid amy region: ${region}" >&2
	exit 1
fi

case "${release}" in
	-h|--help)
		exec uwshelp web-deploy
	;;
	*)
		deploy "${region}" "${release}"
	;;
esac

exit 0

#uwscli:web-deploy			- deploy meteor web release

#uwsdoc:web-deploy region [X.Y.Z-abc123]
#uwsdoc:
#uwsdoc:  Deploy meteor web build X.Y.Z-abc123.
#uwsdoc:  With no arguments it lists built images available for deploy.
#uwsdoc:
#uwsdoc:  region - cluster region.
