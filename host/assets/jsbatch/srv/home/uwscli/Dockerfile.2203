FROM uws/base-2203

LABEL mantainer="Jerem√≠as Casteglione <jeremias@talkingpts.org>"
LABEL version="220331"

USER root:root
WORKDIR /root

ENV USER root
ENV HOME /root

RUN /root/bin/apt-install.sh openssh-server python3 sudo nq

RUN groupadd -o -g 3000 uwscli \
	&& useradd -o -d /srv/home/uwscli -m -c 'uwscli' -g 3000 -u 3000 uwscli \
	&& chmod -v 0750 /srv/home/uwscli

COPY --chown=root:uwscli ./ /srv/home/uwscli

RUN /srv/home/uwscli/sbin/uwscli_setup.py

USER uwscli:uwscli
WORKDIR /srv/home/uwscli

ENV USER uwscli
ENV HOME /srv/home/uwscli

RUN /usr/bin/python3 --version
