[Unit]
Description=uws-munin-backend
Requires=syslog.service
Requires=docker.service
After=docker.service
AssertFileIsExecutable=/usr/bin/docker

[Service]
Type=exec
Restart=on-failure
StandardError=syslog
User=uwsrun
Group=uws
WorkingDirectory=/home/uwsrun
ExecStop=/usr/bin/docker kill uws-munin-backend-service
SuccessExitStatus=SIGKILL
ExecStart=/uws/munin/backend-service-start.sh

[Install]
WantedBy=multi-user.target
