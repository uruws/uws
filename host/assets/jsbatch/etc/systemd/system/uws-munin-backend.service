[Unit]
Description=uws-munin-backend
Requires=syslog.service
Requires=docker.service
After=docker.service
AssertFileIsExecutable=/usr/bin/docker

[Service]
Type=exec
Restart=on-failure
StandardError=syslog
User=uwsrun
Group=uws
WorkingDirectory=/home/uwsrun
ExecStop=/usr/bin/docker kill uws-munin-backend-service
SuccessExitStatus=SIGKILL
ExecStart=/usr/bin/docker run --rm -u root \
	--name uws-munin-backend-service \
	--hostname munin-backend.uws.local \
	-p 127.0.0.1:8049:80 \
	-v /srv/munin/cache/www:/var/cache/munin/www:ro \
	789470191893.dkr.ecr.us-west-1.amazonaws.com/uws:munin-backend

[Install]
WantedBy=multi-user.target
