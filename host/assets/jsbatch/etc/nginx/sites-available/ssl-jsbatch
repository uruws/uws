#
# SSL internal domain
#
server {
	listen 443 default_server ssl;
	listen [::]:443 default_server ssl;

	server_name jsbatch.uws.talkingpts.org;
	server_tokens off;

	root /srv/www/ssl;

	ssl_certificate /srv/acme/cert/jsbatch.uws.talkingpts.org.crt;
	ssl_certificate_key /srv/acme/key/jsbatch.uws.talkingpts.org.key;

	include /srv/etc/nginx/ssl.conf;

	access_log /var/log/nginx/jsbatch_access.log ssluser;
	error_log /var/log/nginx/jsbatch_error.log;

	include /srv/etc/nginx/ssl-verify-client.conf;

	location / {
		return 301 https://ops.uws.talkingpts.org$request_uri;
	}
}
