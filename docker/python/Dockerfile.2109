FROM uws/base-2109

LABEL mantainer="Jerem√≠as Casteglione <jeremias@talkingpts.org>"
LABEL version="211111"

USER root:root
WORKDIR /root

ENV USER root
ENV HOME /root

RUN /root/bin/apt-install.sh less python3 python3-doc
RUN /root/bin/apt-install.sh python3-coverage libjs-jquery \
	libjs-jquery-throttle-debounce libjs-jquery-tablesorter \
	libjs-jquery-isonscreen

USER uws:uws
WORKDIR /home/uws

ENV USER uws
ENV HOME /home/uws

RUN python3 --version

WORKDIR /opt/uws
CMD /usr/local/bin/uws-login.sh
