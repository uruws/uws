FROM uws/heroku

LABEL mantainer="Jerem√≠as Casteglione <jeremias@talkingpts.org>"
LABEL version="2021.03.18"

USER uws:uws
WORKDIR /home/uws

ENV USER uws
ENV HOME /home/uws

COPY --chown=uws:uws utils/logger.sh /usr/local/bin/
RUN chmod -v 0750 /usr/local/bin/logger.sh

COPY --chown=uws:uws build/api-logs.bin /usr/local/bin/api-logs
RUN chmod -v 0750 /usr/local/bin/api-logs

CMD ["default"]
ENTRYPOINT ["/usr/local/bin/logger.sh"]
