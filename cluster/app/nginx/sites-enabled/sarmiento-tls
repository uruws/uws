upstream meteor-api {
	server meteor.api:3000;
}

upstream meteor-web {
	server meteor.web:3000;
}

server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name sarmiento.uws.talkingpts.org;

	include snippets/uws.conf;
	include snippets/tapo-tls.conf;

	access_log /var/log/nginx/access_log upstream;
	error_log  /var/log/nginx/error_log notice;

	root /var/www/html;
	index index.html;

	location /websocket {
		include snippets/proxy_websocket_params;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection $connection_upgrade;
		proxy_pass http://meteor-web;
	}

	location /api/ {
		include snippets/proxy_params;
		proxy_pass http://meteor-api;
	}

	location / {
		include snippets/proxy_params;
		proxy_pass http://meteor-web;
	}
}
